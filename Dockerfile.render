# =============================================================================
# Dockerfile para RENDER (producci칩n)
# Basado en el Dockerfile actual, optimizado para deploy
# =============================================================================
FROM node:20-alpine

WORKDIR /app

# Dependencias del sistema para OCR e importaci칩n PDF
RUN apk add --no-cache tesseract-ocr tesseract-ocr-data-deu tesseract-ocr-data-eng poppler-utils

# Instalar dependencias (cacheado si no cambia package.json)
COPY package.json package-lock.json* ./
RUN npm ci --omit=dev

# Copiar c칩digo
COPY . .

# Puerto que escucha la app (Render lo detecta autom치ticamente)
EXPOSE 4000

# Health check para Render
HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:4000/health || exit 1

ENV NODE_ENV=production
ENV TZ=Europe/Zurich

CMD ["node", "src/index.js"]
